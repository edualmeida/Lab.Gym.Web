@page
@using Lab.Gym.Web.Pages.Manage.Profile
@model UpdateModel
@{
    ViewData["Title"] = "Profile";
    var btnName = Model.IsEdit ? "Register" : "Save";
    var readonlyTag = Model.IsEdit ? "readonly" : null;
}
@section Styles {
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="../../img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>@ViewData["Title"]</h2>
                    <div class="bt-option">
                        <a href="./index.html">Home</a>
                        <a href="#">Account</a>
                        <span>@ViewData["Title"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<partial name="_StatusMessage" for="StatusMessage" />
<section class="class-details-section spad-2">
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <input type="hidden" asp-for="Input.UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <span class="text-white">Email</span>
                <input asp-for="Input.Email" class="form-control textbox-disable" autocomplete="username" aria-required="true" placeholder="name@example.com" readonly="true" disabled="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.FullName" class="text-white">Full Name</label>
                <input asp-for="Input.FullName" class="form-control" autocomplete="fullname" aria-required="true" placeholder="Full Name" maxlength="300"/>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.BirthDate" class="text-white"></label>
                <input asp-for="Input.BirthDate" class="form-control" aria-required="true"/>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Address1" class="text-white">Address</label>
                <input asp-for="Input.Address1" class="form-control" autocomplete="address1" aria-required="true" placeholder="Address line 1"/>
                <span asp-validation-for="Input.Address1" class="text-danger"></span>
                <input asp-for="Input.Address2" class="form-control" autocomplete="address2" placeholder="Address line 2 (optional)"/>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.City" class="text-white">City</label>
                <input asp-for="Input.City" class="form-control" autocomplete="city" placeholder="City"/>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.County" class="text-white">County</label>
                <input asp-for="Input.County" class="form-control" autocomplete="county" placeholder="County"/>
                <span asp-validation-for="Input.County" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.PostalCode" class="text-white">EIR Code</label>
                <input asp-for="Input.PostalCode" class="form-control" autocomplete="postalcode" placeholder="EIR Code"/>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Phone1" class="text-white">Phone</label>
                <input asp-for="Input.Phone1" class="form-control" autocomplete="phone" placeholder="Phone" />
                <span asp-validation-for="Input.Phone1" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@btnName</button>
        </form>
    </div>
</div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
