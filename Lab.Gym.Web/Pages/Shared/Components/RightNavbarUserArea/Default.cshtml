@model Lab.Gym.Web.Pages.Shared.Components.RightNavbarUserArea.RightNavbarUserAreaViewModel
@if(Model.IsAuthenticated)
{
    <li class="nav-item dropdown nav-user-menu">
        <a href="javascript:void(0);" class="nav-link" data-toggle="dropdown" role="button">
            <img class="user-image img-circle elevation-2" src="~/img/avatar.svg" alt="User Image">
        </a>
        <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-item" asp-area="" asp-page="/Account/Profile/Index">
                <i class="fas fa-user-edit"></i> Profile
            </a>
            <a class="dropdown-item" asp-area="" asp-page="/Account/ChangePassword/Index">
                <i class="fas fa-user-edit"></i> Change Password
            </a>
            <a class="dropdown-item" asp-area="" asp-page="/Account/Logout/Index">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </li>
    <span class="navbar-text">
        @Model.Username
    </span>
}
else
{
    <a asp-area="" asp-page="/Account/Login/Index">
        <i class="fas fa-user-edit"></i> Login
    </a>
}

